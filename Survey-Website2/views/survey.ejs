<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Survey</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

    * {
      box-sizing: border-box;
      margin: 0;
      font-family: "Ubuntu";
    }

    body {
      min-width: fit-content;
      display: flex;
      flex-direction: column;
      align-items: center;
      background-color: #253752;
      padding: 16px;
    }

    body>h2 {
      color: #fff;
      font-size: 64px;
      margin-bottom: 16px;
      flex: 1;
      text-align: center;
    }

    body>h3 {
      color: #fc0000;
      text-align: center;
    }

    body>* {
      width: 100%;
      max-width: 600px;
      margin-bottom: 16px;
    }

    .question-card {
      border-radius: 8px;
      width: 100%;
      max-width: 600px;
      background-color: #fff;
      padding: 16px;
      margin-bottom: 16px;
    }

    .question-card>h3 {
      margin-bottom: 16px;
    }

    .question-card>p {
      margin-bottom: 8px;
    }

    input[type=radio] {
      margin-right: 16px;
    }

    button {
      border: 0;
      padding: 16px 24px;
      color: #fff;
      cursor: pointer;
      background-color: #fc0000;
      font-weight: bold;
      border-radius: 8px;
    }

    form {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .button-container {
      width: 100%;
      max-width: 600px;
    }

    .option {
      margin-bottom: 8px;
    }
  </style>
</head>

<body>
  <h2>Web Dev Surveys</h2>
  <% if (msg) { %>
    <h3>
      <%= msg %>
    </h3>
    <% } %>
      <form action="/survey" method="post">
        <% for (var surveyQuestion of surveyQuestions) { %>
          <div class="question-card">
            <h3>
              <%= surveyQuestion.question %>
            </h3>
            <% for (var option of surveyQuestion.options) { %>
              <div class="option">
                <label><input type="radio" name="<%= surveyQuestion.question %>" value="<%= option %>" required>
                  <%= option %>
                </label>
              </div>
              <% } %>
          </div>
          <% } %>
            <div class="button-container">
              <button type="submit">Submit</button>
            </div>
      </form>
</body>

</html>