<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Results</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap');

    * {
      box-sizing: border-box;
      margin: 0;
      font-family: "Ubuntu";
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    body>*{
      width: 100%;
      max-width: 600px;
      margin-bottom: 16px;
    }

    body>h1{
      font-size: 32px;
    }

    body>h1, body>h3{
      color: #fff;
    }

    body {
      display: flex;
      flex-direction: column;
      background-color: #253752;
      padding: 16px;
      color: #000;
    }

    .card {
      
      background-color: #fff;
      padding: 16px;
      border-radius: 8px;
    }

    .card>* {
      margin-bottom: 16px;
    }

    .card>div {
      padding: 8px;
    }
    
    .bar {
      position: absolute;
      width: 100%;
      max-width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      background-color: #25375248;
      transition: all 0.5s ease-in-out;
    }

    a {
      display: block;
      background-color: #7aa5e6;
      color: #fff;
      text-decoration: none;
      width: fit-content;
      padding: 10px;
      border-radius: 8px;
    }
  </style>
</head>

<body>
  <h1>Thank you for participating in the survey, results below.</h1>
  <h3>
    <span class="votes">Loading...</span> <span class="plurality"></span>
  </h3>
  <% for(var surveyQuestion of surveyQuestions) {%>
    <div class="card">
      <h3>
        <%= surveyQuestion.question %>
      </h3>
  <% for(var option of surveyQuestion.options) {%>
      <div style="position: relative;">
        <%= option %> - <span class="percent">Loading...</span>
        <div class="bar">
        </div>
      </div>
      <% } %>
    </div>
  <% } %>
    <div>
      <a href="/">Go Home</a>
    </div>
      <script>
    onload = () => {
      setInterval(async () => {
        const res = await fetch("/api/get-results");
        const { polls, votes } = await res.json();
        const { totalVotes } = votes;

        const percentElements = document.querySelectorAll(".percent");
        let elementIndex = 0;

        for (const questionKey in polls) {
          const question = polls[questionKey];

          for (const optionKey in question) {
            const option = question[optionKey];

            if (elementIndex < percentElements.length) {
              const percentage = totalVotes !== 0
                ? ((option.votes / totalVotes) * 100).toFixed(1) + "%"
                : "0%";

              percentElements[elementIndex].innerText = percentage;
              percentElements[elementIndex].parentElement.children[1].style.maxWidth = totalVotes !== 0
                ? ((option.votes / totalVotes) * 100).toFixed(1) + "%"
                : "0%";
              elementIndex++;
            }
          }
        }

        document.querySelector(".votes").innerText = totalVotes;
        document.querySelector(".plurality").innerText = totalVotes !== 1 ? "votes" : "vote";

      }, 2000);
    }
  </script>
</body>

</html>